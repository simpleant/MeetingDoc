<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- 没有焦点时字体颜色 -->
    <item android:state_selected="false" android:color="#FFFFFF"/>
    <!-- 当前选中字体颜色 -->
    <item android:state_selected="true" android:color="#3197FF"/>

    <!-- 非触摸焦点时字体颜色 -->
    <item android:state_focused="true" android:state_pressed="true" android:color="#3197FF"/>

</selector>